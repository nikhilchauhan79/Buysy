<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceriesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groceries"
        android:id="@+id/text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_1"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/recycler_view_1"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/recycler_view_2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exclusive Offers"
        android:id="@+id/text_view_2"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_2"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/recycler_view_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>