<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_input_name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_change_name"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_name"
        android:id="@+id/text_input_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_password"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enhance the product"
        android:id="@+id/text_enhance"
        app:layout_constraintTop_toBottomOf="@id/text_input_password"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviews"
        android:drawableRight="@drawable/arrow"
        android:text="Reviews and feedback window"
        app:layout_constraintTop_toBottomOf="@id/text_enhance"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questions and answers asked"
        android:id="@+id/ques"
        android:drawableRight="@drawable/arrow"
        app:layout_constraintTop_toBottomOf="@id/reviews"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Your Purchases"
        android:id="@+id/text_view_your"
        app:layout_constraintTop_toBottomOf="@id/ques"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/earlier_purchases"
        android:text="Earlier Purchases"
        android:drawableRight="@drawable/arrow"

        app:layout_constraintTop_toBottomOf="@id/text_view_your"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get into shopping with us"
        android:id="@+id/text_view_get"
        android:drawableRight="@drawable/arrow"

        app:layout_constraintTop_toBottomOf="@id/earlier_purchases"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Your Addresses"
        android:id="@+id/text_view_address"
        app:layout_constraintTop_toBottomOf="@id/text_view_get"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/existing_address"
        android:text="Existing Address"
        android:drawableRight="@drawable/arrow"

        app:layout_constraintTop_toBottomOf="@id/text_view_address"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new address"
        android:drawableRight="@drawable/arrow"
        android:id="@+id/add_address"
        app:layout_constraintBottom_toTopOf="@id/button_update_profile"
        app:layout_constraintTop_toBottomOf="@id/existing_address"/>


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/button_update_profile"
    android:text="Update"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/add_address"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>